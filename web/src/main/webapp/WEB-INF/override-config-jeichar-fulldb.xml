<overrides>
    <import file="/WEB-INF/overrides-config-geocat.xml"/>

	<logging>
      <logFile>/WEB-INF/log4j.cfg</logFile>
      <logFile>/WEB-INF/log4j-jeichar.cfg</logFile>
  </logging>
	  <!-- properties allow some properties to be defined that will be substituted -->
    <!-- into text or attributes where ${property} is the substitution pattern -->
    <!-- The properties can reference other properties -->
    <properties>
        <postgis.db>geocat2_dump</postgis.db>
    </properties>
    <file name=".*/WEB-INF/config.xml">
      <replaceText xpath="general/uploadDir">/tmp/full_gc_data/uploads</replaceText>
      <replaceAtt xpath="appHandler/param[@name = 'schemaPluginsDir']" attName="value" value="/tmp/full_gc_data/schemaPluginsDir"/>
      <replaceAtt xpath="appHandler/param[@name = 'htmlCacheDir']" attName="value" value="/tmp/full_gc_data/htmlCacheDir"/>
    </file>
    <file name=".*/WEB-INF/config-gui.xml">
        <replaceText xpath="geoserver.url">http://ec2-79-125-29-72.eu-west-1.compute.amazonaws.com/geoserver</replaceText>
        <replaceXML xpath="mapSearch/layers">
                <layer server="http://ec2-79-125-29-72.eu-west-1.compute.amazonaws.com/geoserver/wms" tocName="Kantone"  params="{layers: 'chtopo:kantoneBB', transparent: 'true', format: 'image/png'}"  options="{isBaseLayer: true}" />
        </replaceXML>
        <replaceXML xpath="mapViewer/layers">
                <layer server="http://ec2-79-125-29-72.eu-west-1.compute.amazonaws.com/geoserver/wms" tocName="Kantone"  params="{layers: 'chtopo:kantoneBB', transparent: 'true', format: 'image/png'}"  options="{isBaseLayer: true}" />
        </replaceXML>
    </file>
</overrides>